#! /bin/sh


case "$1" in
  start)
        echo "Starting pb.suspend.ram!"
        /sbin/suspend.to.ram &

        exit 0
        ;;
 stop)
        echo "Stopping pb.suspend.ram!"
        pkill suspend.to.ram
        exit 0
        ;;
 *)
        echo "Usage: service suspend.ram {start|stop}"
        exit 1
esac

exit 0



